/* 左右两边有按钮 只有下边框的输入框 */

.input-box-line {
  display: flex;
  align-items: center;
  border-bottom: 1px solid #b2b2b2;
  padding: 0 10rpx;
  margin-bottom: 28rpx;
}

.input-box-line .input {
  flex: 1;
  padding-left: 32rpx;
  height: 56rpx;
}

