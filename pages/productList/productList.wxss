/* pages/productList/productList.wxss */

.product-box {
  padding-bottom: 100rpx;
}

.product-nav > .fl-1::after {
  content: '';
  position: absolute;
  left: 0;
  bottom: 0;
  height: 2px;
  width: 0;
  background-color: #fa595e;
  transition: all .3s;
	-webkit-transition: all .3s;
}
.product-nav .active {
  color: #fa595e;
}
.product-nav .fl-1.active::after {
  width: 100%;
}

