/* 批量操作 */
.batch-operate {
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  padding: 26rpx 30rpx;
  background-color: rgba(0, 0, 0, 0.5);
}
.batch-operate .mini .van-button {
  margin-top: 0;
  padding: 0 30rpx;
  line-height: 52rpx;
}