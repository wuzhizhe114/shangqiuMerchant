/* pages/product/product.wxss */
.basic-info {
  background: #fff url('https://clueless.gitee.io/shangqiuimages/merchant/product/product-bg.png') no-repeat;
  background-size: 100% 100%;
}

.bendian .item {
  display: flex;
}

.bendian .item > text:first-child {
  width: 170rpx;
  text-align: right;
}

.cate-list .item {
  width: 210rpx;
}
.cate-list .item > .pic {
  width: 100%;
  height: 130rpx;
  border: 1px solid #ddd;
}
.cate-list .item > .pic.add {
  height: 134rpx;
  border-radius: 3px;
}