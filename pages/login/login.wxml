<!--pages/login/login.wxml-->
<view class='container'>
  <view class='header-top d-fl al-center jc-center theme-bg color-white fs-36'>
    <text>已注册商户登录</text>
  </view>
  <view class='form'>
    <view class='input-box-line'>
      <text class='iconfont icon-guanjiaowangtubiao01 theme-color fs-36'></text>
      <input class='input' placeholder-class='ph-color' type='number' placeholder='请输入手机号'></input>
      <text class='iconfont icon-close1 fs-36 color-gray'></text>
    </view>
    <view class='input-box-line'>
      <text class='iconfont icon-mima1 theme-color fs-36'></text>
      <input class='input' placeholder-class='ph-color' type='password' placeholder='请输入密码'></input>
      <text class='iconfont icon-yanjing1 fs-36 color-gray'></text>
    </view>
    <view class='text-right'>
      <navigator hover-class='none' url='' class='theme-color fs-24'>忘记密码</navigator>
    </view>
  </view>
  <view class='btn-box pd-lr-30'>
    <navigator url='/pages/credit/credit' open-type='switchTab' hover-class='none'>
      <van-button block="{{true}}" type="primary">登录</van-button>
    </navigator>
  </view>
</view>